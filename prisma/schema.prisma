// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id
  adminRole Boolean  @default(false)
  createdAt DateTime @default(now())
  events    Event[]
}

model City {
  name   String  @id
  events Event[]
}

model Event {
  id        Int      @id @default(autoincrement())
  // Some generic database fields
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Event metadata
  title         String
  startTime     DateTime
  endTime       DateTime
  description   String
  url           String
  location      String
  image         String
  freeEvent     Boolean
  online        Boolean
  organiserName String

  // Stores information on the User who has submitted this event
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // Admin Fields
  approved Boolean @default(false)

  city     City?   @relation(fields: [cityName], references: [name])
  cityName String?
}
